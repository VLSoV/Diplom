<Window x:Class="Diplom.WindowProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Title="Обработка изображения..." Height="180" Width="300">
    <StackPanel VerticalAlignment="Center" Margin="5">
        <ProgressBar Margin="5 25 5 5" Name="progressBar" Minimum="0" Maximum="100" Height="15" Visibility="Visible"/>
        <TextBlock Name="txt_progressBar" Margin="5" HorizontalAlignment="Center" Height="18" Visibility="Visible"/>
        <TextBlock Name="txt_progressBar_time" Margin="0 5 0 5" HorizontalAlignment="Center"  Height="18" Visibility="Hidden"/>
        <Button x:Name="button_ok" Height="25" Width="70" Visibility="Hidden" Click="button_ok_Click" IsDefault="True">Ок</Button>
    </StackPanel>
</Window>
